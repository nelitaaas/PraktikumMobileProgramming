<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <Button
            android:id="@+id/bt1"
            android:text="1"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/kosong"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/bt2"
            android:text="2"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/kosong"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/bt3"
            android:text="3"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/kosong"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <Button
            android:id="@+id/bt4"
            android:text="4"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/kosong"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/bt5"
            android:text="5"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/kosong"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/bt6"
            android:text="6"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/kosong"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <Button
            android:id="@+id/bt7"
            android:text="7"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/kosong"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/bt8"
            android:text="8"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/kosong"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/bt9"
            android:text="9"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/kosong"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>